<%# locals: { user:, key_type: } %>

<div class="border rounded-lg p-4">
  <% api_key = user.find_user_api_key_for(key_type.name) %>
  <p class="text-gray-600"><%= key_type.name.humanize %> API Key</p>
  <p class="font-medium"><%= api_key.present? ? "••••••••" : "Not set" %></p>
  
  <%= link_to api_key.present? ? "Update API key" : "Add API key", 
      edit_api_key_user_path(user, api_type: key_type.name), 
      class: "text-blue-600 hover:underline text-sm" %>
</div>